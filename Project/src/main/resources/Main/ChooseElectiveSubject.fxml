<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>


<AnchorPane prefHeight="250.0" prefWidth="300.0" stylesheets="@../CSS/style.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.ChooseElectiveSubjectController">
   <children>
      <StackPane layoutY="-2.0" prefHeight="30.0" prefWidth="302.0">
         <children>
            <Label text="Choose Elective Subject:">
               <font>
                  <Font name="Microsoft New Tai Lue Bold" size="16.0" />
               </font>
            </Label>
         </children>
      </StackPane>
      <ScrollPane hbarPolicy="NEVER" layoutX="51.0" layoutY="33.0" prefHeight="152.0" prefWidth="200.0">
         <content>
            <AnchorPane fx:id="subjectsContainer" prefHeight="148.0" prefWidth="200.0">
               <children>
                  <AnchorPane prefHeight="52.0" prefWidth="200.0" styleClass="card">
                     <children>
                        <Label fx:id="subjectName" alignment="CENTER" layoutX="11.0" layoutY="9.0" prefHeight="34.0" prefWidth="82.0" style="-fx-padding: 7;" styleClass="card-header" text="Label">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                        </Label>
                        <RadioButton layoutX="178.0" layoutY="17.0" mnemonicParsing="false" />
                        <Label fx:id="teacherName" layoutX="93.0" layoutY="17.0" prefHeight="18.0" prefWidth="84.0" />
                     </children>
                  </AnchorPane>
               </children>
            </AnchorPane>
         </content>
      </ScrollPane>
      <Button fx:id="confirmButton" layoutX="14.0" layoutY="201.0" mnemonicParsing="false" onAction="#handleConfirmButton" prefHeight="22.0" prefWidth="98.0" styleClass="spec-button" text="Confirm">
         <graphic>
            <ImageView fitHeight="21.0" fitWidth="22.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../Images/confirm.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
      <Button fx:id="cancelButton" layoutX="204.0" layoutY="201.0" mnemonicParsing="false" onAction="#handleCancelButton" prefHeight="11.0" prefWidth="84.0" styleClass="danger-button" text="Cancel">
         <graphic>
            <ImageView blendMode="COLOR_DODGE" fitHeight="21.0" fitWidth="22.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../Images/cancel.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
   </children>
</AnchorPane>
