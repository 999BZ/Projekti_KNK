<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane fx:id="rootPane" prefHeight="650.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.StudentsController">
   <left>
      <fx:include source="SideNav.fxml" styleClass="students" />
   </left>
   <center>
      <AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="750.0" stylesheets="@../CSS/style.css">
         <children>
            <TableView fx:id="studentsTable" layoutY="100.0" prefHeight="400.0" prefWidth="750.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
               <columns>
                  <TableColumn fx:id="name" editable="false" prefWidth="88.0" resizable="false" text="Name" />
                  <TableColumn fx:id="surname" prefWidth="94.0" text="Surname" />
                  <TableColumn fx:id="birthdate" prefWidth="79.0" text="Birthday" />
                  <TableColumn fx:id="year" prefWidth="46.0" text="G.Lvl" />
                  <TableColumn fx:id="paralel" prefWidth="38.0" text="Prl." />
                  <TableColumn fx:id="phone" prefWidth="105.0" text="Phone Number" />
                  <TableColumn fx:id="email" prefWidth="163.0" text="Email" />
                  <TableColumn fx:id="address" prefWidth="72.0" text="Address" />
                  <TableColumn fx:id="gender" prefWidth="64.0" text="Gender" />
               </columns>
            </TableView>
            <Button fx:id="addStudentButton" layoutX="620.0" layoutY="510.0" mnemonicParsing="false" onAction="#goToAddStudents" prefHeight="30.0" prefWidth="129.0" styleClass="spec-button" stylesheets="@../CSS/style.css" text="Add a Student">
               <graphic>
                  <ImageView fitHeight="21.0" fitWidth="22.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../Images/register.png" />
                     </image>
                  </ImageView>
               </graphic></Button>
            <TextField fx:id="searchInput" layoutY="57.0" promptText="Search..." />
            <Button fx:id="searchButton" layoutX="157.0" layoutY="55.0" mnemonicParsing="false" onAction="#searchStudents" styleClass="spec-button">
               <graphic>
                  <ImageView fitHeight="21.0" fitWidth="22.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../Images/search.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
         </children>
      </AnchorPane>
   </center>
</BorderPane>
